<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@color/colorLogoBlue"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profileimage"
        android:layout_width="410dp"
        android:layout_height="160dp"
        android:layout_marginBottom="60dp"
        android:elevation="10dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/slider_background"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileimage">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Welcome To Khushvee Horecca"
            android:textColor="@color/colorLogoBlue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/useremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="For inquiry and best offers! \n  Call us on:9909975572 \n  Email:khushveehorecas@gmail.com \n \nAddress:56, Sankalp Industrial park, Opp. HP CNG Mother Station, N.H.8, Nr. S.P. Ring Road, Nana Chiloda-382330, Ahmedabad, Gujarat, India."
            android:textColor="@color/colorLogoBlue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="CLICK ON THE BELOW ICON TO REACH US ON WHATSAPP :"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />

                <ImageView
                    android:id="@+id/whatsapp_textview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0"
                    android:elevation="10dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/whatsapp1" />


                    <ImageView
                    android:id="@+id/location_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    android:background="@drawable/locationmin"
                    android:padding="13dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:textSize="18sp"
                    android:elevation="10dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/aboutus"
                    android:elevation="5dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@color/colorLogoBlue"
                    android:elevation="10dp"
                    android:text="Created and Managed by \n VISION ART INFOTECH"
                    />

                <TextView
                    android:id="@+id/visionArtWebLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:background="@color/colorLogoBlue"
                    android:textSize="20sp"
                    android:elevation="10dp"
                    android:textColorLink="@color/colorWhite"
                    android:text="@string/VisionArtWebLink"
                    />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
